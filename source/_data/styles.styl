.notice {
  padding: 5px 20px;  
  font-size: 14px;
  background: #fffbe6;
  border: 1px solid #ffe58f;
  border-radius: 5px;
  overflow: hidden;
  margin: 10px auto;
  
  .notice-icon {
    float: left;
    padding: 0;

    svg {
      vertical-align: middle;
    }
  }
  .notice-msg {
    margin: 0; 
    overflow: hidden;

    .notice-main-con {
      overflow: hidden;    
    }
 
    .notice-main {
      display: inline-block;
      width: auto;  
      white-space: nowrap;
    }
	
    .notice-content {
      display: block;
      -moz-animation: move 8s infinite linear;
      -webkit-animation: move 8s infinite linear;
      animation: move 8s infinite linear;       	  	
    }
  }
}

@-moz-keyframes move{ 
    0%{transform:translateX(100%);}    
    50%{transform:translateX(0);}
    100%{transform:translateX(-100%);} 
}
@-webkit-keyframes move{ 
    0%{transform:translateX(100%);}    
    50%{transform:translateX(0);}
    100%{transform:translateX(-100%);}
}
@keyframes move{ 
    0%{transform:translateX(100%);}    
    50%{transform:translateX(0);}
    100%{transform:translateX(-100%);}   
}
  
.posts-expand {
  padding-top: 20px;

  +mobile() {
    margin: 0;
  }
}

h3.post-description-meta {
  line-height:400%; 
  margin: initial;
  font-size: $font-size-14;
  font-weight: 500;
  color: $heading-color;
}

h3.post-description-meta.en {
  font-weight: bold;
}
.posts-expand .post-meta {
  margin: 0;
  .post-meta-item, .post-meta-item a {
    color: $text-color-secondary;
    font-size: $font-size-secondary;
  }
  time {
    border-bottom: 0;
    cursor: pointer;
  }  
  .post-description {
    zoom:1;
    font-size: $font-size-12; // 1em ?
    text-align: justify;
    color: var(--text-color);
  }
}

.post-keyword {
  margin-top: 0;

  .post-keyword-meta {
    color: var(--text-color);
    display: inline;
    font: normal $font-size-12 $font-family-headings;
  }
  .post-keyword-meta.en {
    font: bold $font-size-12 $font-family-base;
  }

  text-align: left;

  a, a:not(:last-child) {
    margin-right: 0;
    display: inline-block;
    font-size: 16px;
  }
}

.post-body {
  font-size: $font-size-12;// 默认小四
  // 标题
  h1, h2, h3, h4, h5, h6 {
    margin: 0.5em 0; //段前段后0.5行
    font-weight: 500;
    line-height: 2em; //单倍行距
    color: $heading-color;
  }
  h2 {
    text-align: center; //章标题居中
    font-size: $font-size-16; //三号黑体
    margin: 1em auto; //段后1行
  }
  h3 {
    font-size: $font-size-14; //节标题四号黑体
  }
  h4, h5, h6 {
    font-size: $font-size-12; //小节标题小四黑体
  }
  // 正文
  p {
    margin-bottom: 1em; //段前段后0.5
  }
  .MJX-TEX {
    font-size: $font-size-10-5;
  }
  .image-caption {
    margin: 0px auto; //居中
    font: normal $font-size-10-5 $font-family-posts; //图名称五号宋体
  }
  .aplayer-list {
    li::before{
      content: none; //修复
    }
  }
  //表格
  .table-container {
    margin-bottom: 1em;
  }
  table {
    margin: 0 auto;
    max-width: 100%;
    width: auto;
    border-top: 2px solid $black-deep;
    border-bottom: 2px solid $black-deep;
    
    thead {
      border-bottom: 1px solid $grey-dark;
    }
    tr {
      overflow-x: auto;
      overflow-y: hidden;
      text-align: justify;
      word-break: keep-all;
      white-space:nowrap;
    }
    th, td {
      padding: 4px 8px;
      width: 150px;
      border: none;
    }
  }
  //分割线
  hr {
    height: 1px;
    margin: 16px 0;
    background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
  }
  //参考文献
  .footnotes{
    white-space: nowrap;
    overflow-x:auto;
    ol {
      padding-left: 0;
      list-style-type: none;
      counter-reset:sectioncounter;
      li::before {
        content:"[" counter(sectioncounter) "] "; 
        counter-increment:sectioncounter;
      }
      li {
        p { 
          display: inline;
          text-align: justify;
          word-break: break-all;
        }
      }
    }
  }
  h2.footnotes-meta {
    margin: 2em 0 0 0;
  }                   
}
